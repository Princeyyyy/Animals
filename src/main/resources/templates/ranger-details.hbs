{{#partial "title"}}Wildlife Tracker{{/partial}}
{{#partial "content"}}

    <div class="ranger-detail">
        <div class="text-center">
            <h2><u>{{ranger.name}}</u></h2>
            <div class="row">
                <div class="col-md-6">
                    <h5>Badge Number:</h5>
                    <p><em> {{ranger.badgeNo}} </em></p>
                </div>
                <div class="col-md-6">
                    <h5>Contact:</h5>
                    <p><em> {{ranger.contact}} </em></p>
                </div>
        </div>
    </div>


    {{#if endangeredSightings}}

        <h3>Endangered Sightings:</h3>
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">Type</th>

                <th scope="col">Name</th>

                <th scope="col">Age</th>

                <th scope="col">Health</th>

                <th scope="col">Location</th>

                <th scope="col">Ranger</th>

                <th scope="col">Date</th>


            </tr>
            </thead>
            <tbody>
            {{#each endangeredSightings}}
                <tr>
                    <td>{{type}}</td>

                    <td>{{animalName}}</td>

                    <td>{{animalAge}}</td>

                    <td>{{animalHealth}}</td>

                    <td>{{locationId}}</td>

                    <td>{{rangerId}}</td>

                    <td>{{dateSighted}}</td>


                </tr>
            {{/each}}
            </tbody>
        </table>
    {{/if}}

    {{#if normalSightings}}

        <h3>Non-Endangered Sightings:</h3>
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">Type</th>

                <th scope="col">Name</th>

                <th scope="col">Location</th>

                <th scope="col">Ranger</th>

                <th scope="col">Date</th>


            </tr>
            </thead>
            <tbody>
            {{#each normalSightings}}

                <tr>
                    <td>{{type}}</td>

                    <td>{{animalName}}</td>

                    <td>{{locationId}}</td>

                    <td>{{rangerId}}</td>

                    <td>{{dateSighted}}</td>


                </tr>
            {{/each}}
            </tbody>
        </table>
    {{/if}}

{{/partial}}
{{> base.hbs}}

