{{#partial "content"}}

    {{#if endangered}}

        <div class="container">
            <h5 class="text-center">Add Endangered Sighting</h5>
            <hr>
            <form method="Post" action="/sightendangered">
                <div class="form-group">
                    <label for="name">AnimalName</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Anima Name">
                </div>
                <div class="form-group">
                    <label for="age">Animal Age</label>
                    <input type="number" class="form-control" id="age" name="age" placeholder="Animal Age">
                </div>
                <div class="form-group">
                    <label for="health">Animal Health</label>
                    <select class="form-control" id="health" name="health">
                        <option value="Healthy">Healthy</option>
                        <option value="Sick">Sick</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="ranger">Ranger</label>
                    <select class="form-control" id="ranger" name="ranger">
                        {{#if rangers}}
                            {{#each rangers}}
                                <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        {{/if}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <select class="form-control" id="location" name="location">
                        {{#if locations}}
                            {{#each locations}}
                                <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        {{/if}}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    {{else}}

        <div class="container">
            <h5 class="text-center">Add Normal Sighting</h5>
            <hr>
            <form method="Post" action="/sightnormal">
                <div class="form-group">
                    <label for="name">AnimalName</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Anima Name">
                </div>
                <div class="form-group">
                    <label for="ranger">Ranger</label>
                    <select class="form-control" id="ranger" name="ranger">
                        {{#if rangers}}
                            {{#each rangers}}
                                <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        {{/if}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <select class="form-control" id="location" name="location">
                        {{#if locations}}
                            {{#each locations}}
                                <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        {{/if}}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    {{/if}}


{{/partial}}

{{> layout.hbs}}
