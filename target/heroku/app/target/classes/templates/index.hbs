{{#partial "title"}}Wildlife Tracker{{/partial}}
{{#partial "content"}}

    <div class="page">
        <div class="row">
            <div class="col-sm-6">
                <h3>Endangered Sightings:</h3>
                <table class="table table-dark">
                    <thead>
                    <tr>
                        <th scope="col">Type</th>

                        <th scope="col">Name</th>

                        <th scope="col">Age</th>

                        <th scope="col">Health</th>

                        <th scope="col">Location</th>

                        <th scope="col">Ranger</th>

                        <th scope="col">Date Sighted</th>
                    </tr>
                    </thead>

                    <tbody>
                    {{#each endangeredSightings}}
                        <tr>
                            <td>{{type}}</td>

                            <td>{{animalName}}</td>

                            <td>{{animalAge}}</td>

                            <td>{{animalHealth}}</td>

                            <td>{{locationId}}</td>

                            <td>{{rangerId}}</td>

                            <td>{{dateSighted}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>

            <div class="col-sm-6">
                <h3>Non-Endangered Sightings:</h3>
                <table class="table table-dark">
                    <thead>
                    <tr>
                        <th scope="col">Type</th>

                        <th scope="col">Name</th>

                        <th scope="col">Location</th>

                        <th scope="col">Ranger</th>

                        <th scope="col">Date Sighted</th>
                    </tr>
                    </thead>

                    <tbody>
                    {{#each normalSightings}}

                        <tr>
                            <td>{{type}}</td>

                            <td>{{animalName}}</td>

                            <td>{{locationId}}</td>

                            <td>{{rangerId}}</td>

                            <td>{{dateSighted}}</td>

                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

{{/partial}}
{{> base.hbs}}